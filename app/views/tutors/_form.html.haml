= form_for @tutor do |f|
  - if @tutor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tutor.errors.count, "error")} prohibited this tutor from being saved:"
      %ul
        - @tutor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :age
    = f.number_field :age
  .actions
    = f.submit 'Save'
