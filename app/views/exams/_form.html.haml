= form_for(@exam) do |f|
  - if @exam.errors.any?
    #error_explanation
      %h2
        = pluralize(@exam.errors.count, "error")
        prohibited this exam from being saved:
      %ul
        - @exam.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :age
    %br/
    = f.number_field :age
  .actions
    = f.submit
