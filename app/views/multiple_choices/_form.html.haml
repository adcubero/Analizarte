= form_for @multiple_choice, @path do |f|
  - if @multiple_choice.errors.any?
    #error_explanation
      %h2= "#{pluralize(@multiple_choice.errors.count, "error")} prohibited this multiple_choice from being saved:"
      %ul
        - @multiple_choice.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :question
    = f.text_field :question
  .field
    = f.label :exam
    = f.text_field :exam
  .actions
    = f.submit 'Save'
