= form_for @multi_option, @path do |f|
  - if @multi_option.errors.any?
    #error_explanation
      %h2= "#{pluralize(@multi_option.errors.count, "error")} prohibited this multi_option from being saved:"
      %ul
        - @multi_option.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :option
    = f.text_field :option
  .field
    = f.label :multiple_choice
    = f.text_field :multiple_choice
  .actions
    = f.submit 'Save'
